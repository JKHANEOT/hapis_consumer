<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/wallet_account_balance_iv"
        android:layout_width="@dimen/menu_item_icon_size"
        android:layout_height="@dimen/menu_item_icon_size"
        app:srcCompat="@drawable/ic_wallet_menu"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/wallet_account_balance_tv"
        android:layout_toEndOf="@+id/wallet_account_balance_iv"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:layout_centerVertical="true"
        android:textDirection="locale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textColor="@color/white"
        style="@style/semi_bold_14sp"/>

</RelativeLayout>